<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.ProductFragment">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/new_product"
        android:layout_width="356dp"
        android:layout_height="235dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="7dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/acme"
                android:text="name:"
                android:textColor="@color/black"
                android:textSize="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/product_name"
                android:layout_width="293dp"
                android:layout_height="43dp"
                android:layout_gravity="center"
                android:layout_marginStart="4dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/blank"
                android:fontFamily="sans-serif"
                android:gravity="start"
                android:text="Huiji Haobashi Pickled Pepper Flavored Dried Tofu"
                android:textColor="@color/black"
                android:textSize="13dp"
                app:layout_constraintStart_toEndOf="@+id/textView"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/product_supplier"
                android:layout_width="168dp"
                android:layout_height="23dp"
                android:layout_gravity="center"
                android:layout_marginStart="128dp"
                android:layout_marginTop="72dp"
                android:background="@drawable/blank"
                android:fontFamily="sans-serif"
                android:text="Sichuan Huiji Food Co., Ltd"
                android:textColor="@color/black"
                android:textSize="13dp"
                app:layout_constraintStart_toEndOf="@+id/textView"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginTop="72dp"
                android:fontFamily="@font/acme"
                android:text="price:"
                android:textColor="@color/black"
                android:textSize="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/product_price"
                android:layout_width="38dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginStart="4dp"
                android:layout_marginTop="68dp"
                android:background="@drawable/blank"
                android:fontFamily="sans-serif"
                android:text="6.00"
                android:textColor="@color/black"
                android:textSize="13dp"
                app:layout_constraintStart_toEndOf="@+id/textView"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="112dp"
                android:layout_marginTop="72dp"
                android:fontFamily="@font/acme"
                android:text="supplier:"
                android:textColor="@color/black"
                android:textSize="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/product_amount"
                android:layout_width="53dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginStart="208dp"
                android:layout_marginTop="112dp"
                android:background="@drawable/blank"
                android:fontFamily="sans-serif"
                android:text="200"
                android:textColor="@color/black"
                android:textSize="13dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/product_standard"
                android:layout_width="72dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:layout_marginStart="28dp"
                android:layout_marginTop="112dp"
                android:background="@drawable/blank"
                android:fontFamily="sans-serif"
                android:text="95 grams"
                android:textColor="@color/black"
                android:textSize="13dp"
                app:layout_constraintStart_toEndOf="@+id/textView"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="152dp"
                android:layout_marginTop="112dp"
                android:fontFamily="@font/acme"
                android:text="amount:"
                android:textColor="@color/black"
                android:textSize="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginTop="112dp"
                android:fontFamily="@font/acme"
                android:text="standard:"
                android:textColor="@color/black"
                android:textSize="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginTop="152dp"
                android:fontFamily="@font/acme"
                android:text="category:"
                android:textColor="@color/black"
                android:textSize="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Spinner
                android:id="@+id/category_spinner"
                android:layout_width="137dp"
                android:layout_height="24dp"
                android:layout_marginStart="76dp"
                android:layout_marginTop="152dp"
                android:entries="@array/categories"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginTop="200dp"
                android:fontFamily="@font/acme"
                android:text="expiry date:"
                android:textColor="@color/black"
                android:textSize="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/product_expiry_day"
                android:layout_width="67dp"
                android:layout_height="36dp"
                android:layout_marginStart="260dp"
                android:layout_marginTop="184dp"
                android:gravity="center"
                android:hint="day"
                android:inputType="number"
                android:textSize="13dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textview7"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:layout_marginStart="156dp"
                android:layout_marginTop="192dp"
                android:fontFamily="sans-serif"
                android:text="/"
                android:textColor="@color/black"
                android:textSize="19dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/product_expiry_month"
                android:layout_width="67dp"
                android:layout_height="36dp"
                android:layout_marginStart="172dp"
                android:layout_marginTop="184dp"
                android:gravity="center"
                android:hint="month"
                android:inputType="number"
                android:textSize="13dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textview8"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:layout_marginStart="240dp"
                android:layout_marginTop="192dp"
                android:fontFamily="sans-serif"
                android:text="/"
                android:textColor="@color/black"
                android:textSize="19dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/product_expiry_year"
                android:layout_width="67dp"
                android:layout_height="36dp"
                android:layout_marginStart="88dp"
                android:layout_marginTop="184dp"
                android:gravity="center"
                android:hint="year"
                android:inputType="number"
                android:textSize="13dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/edit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginTop="56dp"
        android:backgroundTint="#EF8260"
        android:text="edit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_product" />

    <Button
        android:id="@+id/save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="212dp"
        android:layout_marginTop="56dp"
        android:backgroundTint="#91DEE8"
        android:text="save"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_product" />



</androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>